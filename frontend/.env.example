# ===================================
# PAYMENTS WITHOUT BORDERS - FRONTEND CONFIGURATION
# ===================================

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_SOCKET_URL=http://localhost:3000

# Environment
REACT_APP_ENVIRONMENT=development

# Application Configuration
REACT_APP_APP_NAME=Payments Without Borders
REACT_APP_APP_VERSION=1.0.0

# Features Toggle
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CROSS_BORDER=true
REACT_APP_ENABLE_KYC=true

# API Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=30000
REACT_APP_SOCKET_TIMEOUT=5000

# Default Settings
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_SUPPORTED_CURRENCIES=USD,EUR,GBP,NGN,KES,ZAR
REACT_APP_MAX_TRANSACTION_AMOUNT=10000
REACT_APP_MIN_TRANSACTION_AMOUNT=0.01

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en
REACT_APP_PAGINATION_SIZE=10

# Analytics (uncomment for production)
# REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# REACT_APP_HOTJAR_ID=XXXXXXX

# Error Reporting (uncomment for production)
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Maps API (for location services)
# REACT_APP_MAPS_API_KEY=your-maps-api-key

# Production Build Configuration
# GENERATE_SOURCEMAP=false
# REACT_APP_PUBLIC_URL=https://your-domain.com
