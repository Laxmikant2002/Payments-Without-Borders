# Docker Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Docker containers)
MONGODB_URI=mongodb://mongodb:27017/payments_without_borders
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=docker-super-secret-jwt-key-change-in-production-2024-pwb-api
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Mojaloop Configuration
MOJALOOP_HUB_ENDPOINT=http://mojaloop-simulator:3000
MOJALOOP_SIMULATOR_ENDPOINT=http://mojaloop-simulator:3001
MOJALOOP_DFSP_ID=paymentswithoutborders
MOJALOOP_DFSP_NAME=PaymentsWithoutBorders
MOJALOOP_PARTICIPANT_ID=payments-dfsp

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
SOCKET_IO_ORIGINS=http://localhost:3000,http://localhost:8080

# Compliance Configuration
KYC_PROVIDER_URL=http://mojaloop-simulator:3000/kyc
KYC_PROVIDER_API_KEY=docker-test-kyc-key
AML_SCREENING_URL=http://mojaloop-simulator:3000/aml
AML_PROVIDER_API_KEY=docker-test-aml-key
SANCTIONS_LIST_URL=https://api.sanctions-list.com

# External Services
EXCHANGE_RATE_API_KEY=docker-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest
NOTIFICATION_SERVICE_URL=https://api.notification-service.com

# Payment Processing - Docker Testing Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,NGN,KES,GHS,JPY,CAD,AUD,CHF,SEK,NOK
MAX_TRANSACTION_AMOUNT=100000
MIN_TRANSACTION_AMOUNT=0.01

# Development/Testing
MOCK_EXTERNAL_SERVICES=true
SKIP_KYC_VERIFICATION=false
ENABLE_API_DOCS=true
LOG_LEVEL=info

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# WebSocket Configuration
SOCKET_IO_ORIGINS=*

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
